<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="299.0" prefWidth="244.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="equipe5MegaSae.controller.CreerArtisteController">
    <Label layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Création de l’Artiste" />
    <VBox alignment="CENTER_LEFT" layoutX="50" layoutY="50" spacing="10">
        <Label text="Nom de l’artiste" />
        <TextField fx:id="nomArtisteField" promptText="Value" />
        <Label text="Telephone" />
        <TextField fx:id="telephoneField" promptText="Value" />
        <Label text="Email" />
        <TextField fx:id="emailField" promptText="Value" />
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="ajouterButton" onAction="#handleValider" style="-fx-background-color: #6A0DAD; -fx-text-fill: white;" text="Ajouter" />
            <Button fx:id="annulerButton" onAction="#handleAnnuler" style="-fx-background-color: #FF0000; -fx-text-fill: white;" text="Annuler" />
        </HBox>
        <Label fx:id="erreurLabel" text="" textFill="red"/>
    </VBox>
</AnchorPane>
