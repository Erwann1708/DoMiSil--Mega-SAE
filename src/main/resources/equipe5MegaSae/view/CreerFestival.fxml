<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="equipe5MegaSae.view.CreerFestival">
   <children>
      <Label text="Créer votre festival" layoutX="10.0" layoutY="5.0" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
      <VBox layoutX="10.0" layoutY="10.0" prefHeight="382.0" prefWidth="350.0" spacing="10" alignment="CENTER_LEFT">
         <children>
            <Label text="Nom du festival" />
            <TextField promptText="Nom du festival" maxWidth="350" />
            <Label text="Budget" />
            <HBox spacing="5" alignment="CENTER_LEFT">
               <TextField promptText="Budget" maxWidth="300" />
               <Label text="€" />
            </HBox>
            <Label text="Date de Début" />
            <HBox spacing="5" alignment="CENTER_LEFT">
               <TextField promptText="JJ" maxWidth="30" />
               <TextField promptText="MM" maxWidth="30" />
               <TextField promptText="AAAA" maxWidth="50" />
            </HBox>
            <Label text="Date de Fin" />
            <HBox spacing="5" alignment="CENTER_LEFT">
               <TextField promptText="JJ" maxWidth="30" />
               <TextField promptText="MM" maxWidth="30" />
               <TextField promptText="AAAA" maxWidth="50" />
            </HBox>
            <Button text="Choisir le lieu" style="-fx-background-color: purple; -fx-text-fill: white;" maxWidth="250" />
            <HBox spacing="15" alignment="CENTER_LEFT">
               <Button text="Créer le Festival" style="-fx-background-color: black; -fx-text-fill: white;" maxWidth="300" prefWidth="300" />
               <Button text="Quitter" style="-fx-background-color: red; -fx-text-fill: white;" maxWidth="100" prefWidth="100" />
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
