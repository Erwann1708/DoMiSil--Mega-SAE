<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="300" prefHeight="360" style="-fx-background-color: #000000;" >

    <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <HBox alignment="TOP_RIGHT">
            <Label text="Créneau" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: black;" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
            <Button text="Annuler" style="-fx-background-color: #ec221f; -fx-text-fill: white;" />
        </HBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Date" />

            <HBox spacing="10">
                <TextField promptText="JJ" prefWidth="40" style="-fx-background-color: #D9D9D9;" />
                <TextField promptText="MM" prefWidth="40" style="-fx-background-color: #D9D9D9;" />
                <TextField promptText="AAAA" prefWidth="60" style="-fx-background-color: #D9D9D9;" />
            </HBox>

            <Label text="Heure Début" />
            <HBox spacing="10">
                <TextField promptText="HH" prefWidth="40" style="-fx-background-color: #D9D9D9;" />
                <TextField promptText="MM" prefWidth="40" style="-fx-background-color: #D9D9D9;" />
            </HBox>

            <Label text="Heure Fin" />
            <HBox spacing="10">
                <TextField promptText="HH" prefWidth="40" style="-fx-background-color: #D9D9D9;" />
                <TextField promptText="MM" prefWidth="40" style="-fx-background-color: #D9D9D9;" />
            </HBox>
        </VBox>

        <Button text="Sélectionner ce créneau" maxWidth="Infinity"
                style="-fx-background-color: black; -fx-text-fill: white;" />
    </VBox>
</AnchorPane>